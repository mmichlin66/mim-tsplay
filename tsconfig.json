{
	"references": [
		{ "path": "../mimcss" },
		{ "path": "../mimbl" },
		{ "path": "../mimcl" },
	],
	"compilerOptions": {
        "composite": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"experimentalDecorators": true,
		"preserveConstEnums": false,
		"esModuleInterop": true,
        "noEmitOnError": true,
        "useDefineForClassFields": false,
        "module": "esnext",
        "moduleResolution": "node",
		"target": "esnext",
		"lib": [ "esnext", "dom" ],
		"rootDir": "src",
		"outDir": "./lib/",
		"jsx": "react",
		"jsxFactory": "mim.jsx",
		"jsxFragmentFactory": "mim.Fragment",
	},

	"include": [
		"./src/**/*"
	]
}